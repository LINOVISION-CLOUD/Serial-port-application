{
  "name": "linovision-serial-app",
  "version": "1.0.3",
  "type": "module",
  "description": "An offline desktop app for serial communication",
  "main": "out/main/index.js",
  "author": "bily@linovision.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/LINOVISION-CLOUD/Serial-port-application.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron-vite dev --config electron.vite.config.js",
    "build": "electron-vite build --config electron.vite.config.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@serialport/bindings-cpp": "^13.0.1",
    "crc": "^4.3.2",
    "echarts": "^5.6.0",
    "element-plus": "^2.9.7",
    "moment-timezone": "^0.5.48",
    "pinia": "^3.0.1",
    "serialport": "^13.0.0",
    "vue": "^3.2.47",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.6.2",
    "electron-vite": "^2.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.example.electronvueserialapp",
    "productName": "LINOVISION Serial",
    "copyright": "Copyright Â© 2025 Your Name",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "arch": [
        "arm64",
        "x64"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "build/icon.icns"
    },
    "files": [
      "out/**/*"
    ],
    "electronDownload": {
      "mirror": "https://mirrors.huaweicloud.com/electron/"
    },
    "publish": {
      "provider": "github",
      "owner": "LINOVISION-CLOUD",
      "repo": "Serial-port-application"
    }
  }
}
